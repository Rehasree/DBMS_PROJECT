          <div class="col-xl-12 col-sm-12" >
            <div class="row" style="padding: 20px;">
              <% projects.forEach((row,index)=>{ %>
                <div class="col-12">
                  <div class="card">
                    <div class="row">
                      <div class="col-8">
                        <p>
                          <span style="font-size: 30px;"><b>
