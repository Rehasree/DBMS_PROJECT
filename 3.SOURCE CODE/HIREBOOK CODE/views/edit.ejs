    <style>
        body {
            background-color: #fff;
        }

        @media screen and (min-width: 701px) and (max-width:3000px) {
            .avatar {
                margin-left: 10px;
                vertical-align: middle;
                margin-bottom: 20px;
                width: 50px;
                height: 50px;
                border-radius: 50%;
            }

            .avatar2 {
                vertical-align: middle;

                width: 50px;
                height: 50px;
                border-radius: 50%;
            }
        }

        @media screen and (min-width: 0px) and (max-width:700px) {
            .avatar {
                display: none;
            }
        }

        .row .col-3 img {
            margin-left: 50px;
            height: 200px;
            width: 200px;
            border-radius: 50%;
            margin-bottom: 10px;

        }

        input[type=file] {
            color: white;
            border-radius: 5px;
            background: #302B63;
        }
    </style>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
