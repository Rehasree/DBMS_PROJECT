<body>
    <main id="main">
        <section>
            <br />
            <br>
            <div class="container">
                <form action="/update" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%= records._id %>" required>
                    <div class="card">
                        <br />
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <div class="row">
                                    <h5><b>Add Project Details</b></h5>
                                    <br /><br />
                                    <div class="col">
                                        <input  required type="text" name="companyName" value="<%= records.companyName %>"
                                            class="form-control" placeholder="Company Name">
                                    </div>
                                    <div class="col">
                                        <select id="inputState" class="form-control">
                                            <option selected>Position Availaible</option>
                                            <option>Graphic Designer</option>
                                            <option>Web Designer</option>
                                            <option>Web Developer</option>
                                            <option>Content Writer</option>
                                            <option>SEO Expert</option>
                                        </select>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col">
                                        <label>Start Date</label>
                                        <input type="date" name="startDate" value="<%= records.startDate %>"
                                            class="form-control" required>
                                    </div>
                                    <div class="col">
                                        <label>Apply by</label>
                                        <input type="date" name="applyBy" value="<%= records.applyBy %>"
                                            class="form-control" required>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col">
                                        <select id="inputState" class="form-control" required>
                                            <option selected>Type of Project</option>
                                            <option>Long-term</option>
                                            <option>Short-Term</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <input type="number" min="1" name="duration" value="<%= records.duration %>"
                                            class="form-control" placeholder="Duration" required>
                                    </div>
                                    <div class="col">
                                        <input type="number" name="stipend" value="<%= records.stipend %>"
                                            class="form-control" placeholder="Stipend" required>
                                    </div>

                                </div>
                                <br />
                                <div class="row">
                                    <div class="col">
                                        <select id="inputState" class="form-control" required>
                                            <option selected>Work location</option>
                                            <option>work from home</option>
                                            <option>Company location</option>
                                        </select>
                                    </div>
                                    <div class="col">
                                        <input type="text" name="skills" value="<%= records.skills %>"
                                            class="form-control" placeholder="Skills required*" required>
                                    </div>
                                </div>
                                <br />

                                <div class="row">

                                    <div class="form-group col">
                                        <input type="number" name="openings" value="<%= records.openings %>"
                                            class="form-control" id="inputZip" placeholder="no. of openings" required>
                                    </div>
                                    <div class="form-group col">
                                        <input type="url" name="weblink" value="<%= records.weblink %>"
                                            class="form-control" id="inputZip" placeholder="Website link" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <input type="text" name="jobTitle" value="<%= records.jobTitle %>"
                                            class="form-control" id="inputZip" placeholder="Job Title" required>
                                    </div>
                                    <div class="form-group col-qw">
                                        <input type="text" name="workJD" value="<%= records.workJD %>"
                                            class="form-control" id="inputZip" placeholder="work Description" required>
                                    </div>
                                </div>
                               
                                <div class=" row">
                                    <div class="col form-group">
                                        <br /><br /><input style="background-color: #302B63; color: white;"
                                            type="submit" class="w-100 btn " value="Submit" /><br /><br /><br />
                                    </div>
                                    <div class="col form-group">
                                        <br /><br /><input type="submit" style="background-color: #302B63; color:white"
                                            class="w-100 btn" value="Cancel" /><br /><br /><br />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
            </div>
            </form>
            </div>
        </section>
    </main>
    <!-- End #main -->

