<body>



    <main id="main">
        <section style="margin-top: 100px;">
            <br />
            <br>
            <div class="container ">
                <div class="card" style="padding: 30px; margin-left: 50px;">
                    <br />

                    <div class="row">

                        <div class="col-12">
                            <h4><b>Edit Profile</b></h4>
                            <br/>
                            
                                <form action="/update3" method="POST">
                                    <input type="hidden" name="id" value="<%= record3._id %>">
                                    <div class="row">
                                        <div class="col-6">
                                            <input type="text" name="firstName" value="<%= record3.firstName %>"
                                                class="form-control" placeholder="First name" required>
                                        </div>
                                        <div class="col-6">
                                            <input type="text" name="lastName" value="<%= record3.lastName %>"
                                                class="form-control" placeholder="Last name"required>
                                        </div>
                                    </div>
                           
                            <br />
                            <div class="row">
                                <div class="col">
                                    <input type="text" name="headLine" value="<%= record3.headLine %>"
                                        class="form-control" placeholder="Head Line" required>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col">
                                    <input type="text" name="email" value="<%= record3.email %>" class="form-control"
                                        placeholder="E-mail" required>
                                </div>
                                <div class="col">
                                    <input type="number" name="mobile" value="<%= record3.mobile %>"
                                        class="form-control" placeholder="Mobile number" required>
                                </div>
                            </div>

                            <br />
                            <div class="row">
                                    <div class="form-group col-xl-6">
                                        <input type="text" name="city" value="<%= record3.city %>" class="form-control"
                                            id="inputCity" placeholder="city" required>
                                    </div>
                                    <div class="form-group col-xl-4">
                                        <input type="text" id="inputState" name="state" value="<%= record3.state %>"
                                            class="form-control" required>
                                           
                                    </div>
                                    <div class="form-group col-xl-2">
                                        <input type="text" name="zip" value="<%= record3.zip %>" class="form-control"
                                            id="inputZip" placeholder="Pin code" required>
                                    </div>
                            </div>
                           

                            <div class="row">
                                <div class="col">
                                    <input type="text" class="custom-select" name="skills" value="<%= record3.skills %>" required>   
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group col">
                                    <label for="exampleFormControlFile1"><b>Graduation date:</b></label><br />
                                    <input type="input" name="gradDate" value="<%= record3.gradDate %>"
                                        placeholder="Graduation year" required>
                                </div>

                            </div>
                            <div class=" row">
                                <div class="col form-group">
                                    <br /><br /><input type="submit" style="background-color: #302B63; color: white;"
                                        class="w-100 btn " value="Submit" /><br /><br /><br />
                                </div>
                                <div class="col form-group">
                                    <br /><br /><input type="submit" style="background-color: #302B63; color:white"
                                        class="w-100 btn" value="Cancel" /><br /><br /><br />
                                </div>
                            </div>
                        </div>
                        </form>
